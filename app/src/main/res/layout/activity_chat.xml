<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background">

        <!-- Top Section -->
        <LinearLayout
            android:id="@+id/topSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Group Title -->
            <TextView
                android:id="@+id/groupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ομαδική Συνομιλία"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Group Members Row -->
            <LinearLayout
                android:id="@+id/membersIcons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_account_circle"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_account_circle"
                    android:layout_marginEnd="8dp" />

                <!-- Add more icons dynamically in your code -->
            </LinearLayout>
        </LinearLayout>

        <!-- RecyclerView for Messages -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMessages"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/topSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottomSection" />

        <!-- Bottom Section -->
        <LinearLayout
            android:id="@+id/bottomSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintBottom_toTopOf="@id/navigationButtons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Message Input -->
            <EditText
                android:id="@+id/editTextMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Type here"
                android:background="@drawable/input_background"
                android:padding="8dp"
                android:textColor="@android:color/black" />

            <!-- Send Button -->
            <Button
                android:id="@+id/buttonSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send"
                android:backgroundTint="@color/gradient_top"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Navigation Bar -->
        <LinearLayout
            android:id="@+id/navigationButtons"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="@color/gradient_top"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/navHome"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_home"
                android:contentDescription="Home"
                android:layout_marginHorizontal="16dp"
                app:tint="@android:color/white" />

            <ImageView
                android:id="@+id/navCalendar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_calendar"
                android:contentDescription="Calendar"
                android:layout_marginHorizontal="16dp"
                app:tint="@android:color/white" />

            <ImageView
                android:id="@+id/navMaps"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_maps"
                android:contentDescription="Maps"
                android:layout_marginHorizontal="16dp"
                app:tint="@android:color/white" />

            <ImageView
                android:id="@+id/navTransactions"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_transactions"
                android:contentDescription="Transactions"
                android:layout_marginHorizontal="16dp"
                app:tint="@android:color/white" />

            <ImageView
                android:id="@+id/navChat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_chat"
                android:contentDescription="Chat"
                android:layout_marginHorizontal="16dp"
                app:tint="@android:color/white" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>
