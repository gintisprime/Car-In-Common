<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/gradient_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/imageViewProfilePicture"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginBottom="16dp"
            android:contentDescription="Profile Picture"
            android:background="@drawable/circle_background" />

        <!-- Upload Picture Button -->
        <Button
            android:id="@+id/buttonUploadPicture"
            android:layout_width="153dp"
            android:layout_height="58dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/nav_bar_color"
            android:text="Upload Picture"
            android:textColor="@android:color/white" />

        <!-- Input Fields -->
        <EditText
            android:id="@+id/editTextTeamName"
            android:hint="Team Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext_background"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray" />

        <EditText
            android:id="@+id/editTextCarModel"
            android:hint="Car Model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext_background"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray" />

        <EditText
            android:id="@+id/editTextCarPlate"
            android:hint="License Plate Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext_background"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray" />

        <!-- Submit Button -->
        <ImageButton
            android:id="@+id/buttonSubmitCarDetails"
            android:layout_width="342dp"
            android:layout_height="87dp"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:contentDescription="Submit Car Details"
            android:padding="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/btn_submit_gr"
            android:textColor="@android:color/white" />


        <ImageButton
            android:id="@+id/buttonChooseExistingCar"
            android:layout_width="337dp"
            android:layout_height="99dp"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:contentDescription="Choose Existing Car"
            android:padding="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/btn_existing_vehicle_gr"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
